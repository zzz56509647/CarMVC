@{
    ViewData["Title"] = "AddUser";
}

<h1>百车汇租赁用户注册</h1>

<table class="table ">
    <tr>
        <td>用户姓名</td>
        <td>
            <input id="name" type="text" />
        </td>

    </tr>
    <tr>
        <td>邮箱:</td>
        <td>
            <input id="mail" type="text" />
        </td>
    </tr>
    <tr>
        <td>验证码</td>
        <td>
            <input id="core" type="text" />
            <input id="Button1" type="button" value="获取验证码" onclick="createcore()" />

        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input id="button" type="button" value="注册" />
            <input id="Hidden1" type="hidden" />
        </td>
    </tr>

</table>


@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript">

        //发送验证码
        function createcore() {
            var Email = $("#mail").val();

            /*var reg = */@*"[a-zA-Z][a-zA-Z_-0-9]{2,17}@{@Html.Raw("@");}(qq|QQ).com";*@
                var reg = "^\\s*([A-Za-z0-9_-]+(\\.\\w+)*@{@Html.Raw("@");}(\\w+\\.)+\\w{2,5})\\s*$";

            if (Email.search(reg) == -1) {
                alert("邮箱格式错误！");
                return;
            }
            $.ajax({
                url: 'http://localhost:57894/api/user/SendMailMessage?Email=' + Email,
                type: 'get',

                success: function (d) {
                    alert(d);
                    $("#Hidden1").val(d);
                }
            })
        }
        //登录方法
        $("#button").click(function () {


            var obj = {};
            obj.Name = $("#name").val();
            obj.Email = $("#mail").val();

            if (obj.Name == "" || obj.Email == "") {
                alert("用户名或邮箱不能为空！");
                return;
            }

            var core = $("#core").val();
            var hidden = $("#Hidden1").val();
            if (core != hidden) {
                alert("验证码错误！");
                return;
            }


            $.ajax({
                url: 'http://localhost:57894/api/user/Post',
                type: 'post',
                //dataType: 'json',
                data: JSON.stringify(obj),
                contentType: "application/json",

                success: function (d) {
                    if (d > 0) {
                        alert("注册成功！");
                        location.href = '/Admin/OrderShow/';
                    }
                    else {
                        alert("注册失败！");
                        return;
                    }
                }
            })
        })

    </script>
}